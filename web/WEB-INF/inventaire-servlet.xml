<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd" >

    
      
    <bean id="messageSource"
          class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="messages"/>
    </bean>

    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass"
                  value="org.springframework.web.servlet.view.JstlView">
        </property>
        <property name="prefix" value="/WEB-INF/jsp/"></property>
        <property name="suffix" value=".jsp"></property>
    </bean>
    
    <bean id="urlHandler"
          class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" >
        <property name="mappings">
            <map>
                <entry key="/authentication.htm" value="AuthenticationFormController"/>
                <entry key="/welcome.htm" value="WelcomeController"/>
                <entry key="/user/*.htm" value="UserManagementController"/>
                <entry key="/profile/*.htm" value="ProfileManagementController"/>
                <entry key="/product/*.htm" value="ProductManagementController" />
                <entry key="/security.htm" value="SecurityController" />
            </map>
        </property>
    </bean>
    
    
    <bean id="AuthenticationFormController" class="inventaire.web.AuthenticationFormController" > 
        <property name="sessionForm" value="true"/>
        <property name="commandName" value="authentication"/>
        <property name="commandClass" value="inventaire.service.Authentication"/> 
        <property name="validator">
            <bean class="inventaire.service.AuthenticationValidator"/>
        </property>
        <property name="formView" value="authentication"/>
        <property name="successView" value="welcome.htm"/>
        <property name="userManager" ref="userManager"/>
    </bean>
    
    <bean id="WelcomeController" class="inventaire.web.WelcomeController" />
    
    <bean id="UserManagementController" class="inventaire.web.UserManagementController" name="/user/usermanagement.htm">
        <property name="methodNameResolver" ref="userResolver" /> 
        <property name="userManager" ref="userManager"/>
        <property name="validators">
            <list>
                <bean class="inventaire.service.UserAddValidator"/>
                <bean class="inventaire.service.UserUpdateValidator"/>
                <bean class="inventaire.service.UserFindValidator"/>
            </list>
        </property>
    </bean>

    <bean id="ProfileManagementController" class="inventaire.web.ProfileManagementController" >
        <property name="methodNameResolver" ref="profileResolver" /> 
        <property name="userManager" ref="userManager"/>
        <property name="validators">
            <list>
                <bean class="inventaire.service.UserUpdateValidator"/>
            </list>
        </property>
    </bean>
    
    <bean id="SecurityController" class="inventaire.security.SecurityController" />
    
    <bean id="ProductManagementController" class="inventaire.web.ProductManagementController" >
        <property name="methodNameResolver" ref="productResolver" />
        <property name="productManager" ref="productManager" />
    </bean>
    
    
    <bean id="userResolver"
          class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver"
          lazy-init="default">
        <property name="mappings">
            <props>
                <prop key="/user/usermanagement.htm">manageUsers</prop>
                <prop key="/user/userupdate.htm">updateUser</prop>
                <prop key="/user/useradd.htm">addUser</prop>
                <prop key="/user/userdelete.htm">deleteUser</prop>
                <prop key="/user/userfind.htm">findUsers</prop>             
            </props>
        </property>
    </bean>
    
    <bean id="profileResolver"
          class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver"
          lazy-init="default">
        <property name="mappings">
            <props>
                <prop key="/profile/profilemanagement.htm">manageProfile</prop>
                <prop key="/profile/profileupdate.htm">updateProfile</prop>
                <prop key="/profile/logout.htm">logout</prop>
            </props>
        </property>
    </bean>
    
    <bean id="productResolver"
          class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver"
          lazy-init="default">
        <property name="mappings">
            <props>
                <prop key="/product/productmanagement.htm">manageProducts</prop>
                <prop key="/product/productupdate.htm">updateProduct</prop>
                <prop key="/product/productadd.htm">addProduct</prop>
                <prop key="/product/productdelete.htm">deleteProduct</prop>
                <prop key="/product/productfind.htm">findProducts</prop>
            </props>
        </property>
            
    </bean>
    
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/welcome.htm"/>
            <mvc:mapping path="/user/*"/>
            <mvc:mapping path="/product/*"/>
            <mvc:mapping path="/profile/*"/>
            <bean class="inventaire.security.SessionInterceptor" />
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/user/*"/>
            <bean class="inventaire.security.SecurityInterceptor" />
        </mvc:interceptor>
    </mvc:interceptors> 
               
</beans>